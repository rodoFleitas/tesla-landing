---
import Section from "../Section.astro";
---

<Section
  color="white"
  title="Disfrute de Tesla"
  subtitle="Programe una prueba de conducción hoy mismo"
  notLink={true}
>
  <video
    slot="background"
    class="object-cover object-center h-full w-full"
    autoplay
    muted
    loop
    src="/video-dos.webm"></video>

  <a
    slot="customBtn"
    class="border-2 rounded font-medium text-white px-6 py-1 hover:bg-white hover:text-black hover:transition-colors hover:duration-500"
    href="#"
  >
    Prueba de conducción
  </a>
</Section>
